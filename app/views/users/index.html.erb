<div class="mb-4" >
  <% if logged_in? %>
  <%= image_tag current_user.image_url.to_s.sub('normal', 'bigger'), class: "rounded-circle", width: 150 %>
  <% end %>
</div>

<div class="row" style="margin-top:20px;">
  <div class="col-md-4 offset-md-4">
    <% if logged_in? %>
    <%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.label :habit, "直したい癖",class:"col-form-label col-form-label-lg" %>
      <%= f.text_area :habit ,class:"form-control border border-dark textarea", :size => "10x8" %>
    </div>
    <div class="form-group">
      <%= f.label :friend, "奢ってもらう友人",class:"col-form-label col-form-label-lg" %>
      <%= f.text_area :friend ,class:"form-control border border-dark textarea", :size => "10x1" %>
    </div>
    <div class:"col-sm-2 col-form-label col-form-label-lg" style="margin-top:50px;">
      <%= f.submit "つぶやく" ,class:"btn btn-primary"%>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
