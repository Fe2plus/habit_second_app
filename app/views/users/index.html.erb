<div class="row">
  <div class="col-md-3 col-12 d-none d-md-block">
    <div class="">
      <% if logged_in? %>
      <%= image_tag current_user.image_url, class: "img-circle", width: 100 %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="">
    <% if logged_in? %>
    <%= form_for(@post) do |f| %>
    <%= f.label :habit, "癖" %>
    <%= f.text_area :habit %>
    <%= f.label :friend, "奢ってもらう友人" %>
    <%= f.text_area :friend %>
    <%= f.submit "つぶやく"%>
    <% end %>
    <% end %>
  </div>
</div>
